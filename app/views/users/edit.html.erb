<h1>Edit My Account</h1>

<% form_for @user, :url => account_path do |f| %>
  <% if @user.errors.any? %>
	<div id="errorExplanation"> 
		<ul> 
		  <% @user.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li> 
	    <% end %> 
	  </ul>
	</div>
	<% end %>
	
  <%= render :partial => "form", :object => f %>
  <%= f.submit "Update" %>
<% end %>

<br />
<%= link_to "My Profile", account_path %>